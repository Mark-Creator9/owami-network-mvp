# Production Environment Configuration
# Copy this file to .env and customize for your production deployment

# Database Configuration (RocksDB, recommended for production)
# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production-with-at-least-32-characters
NODE_ENV=production

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PER_SECONDS=60

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=https://owami.network,https://app.owami.network

# Monitoring Configuration
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Database Pool Configuration
DB_POOL_SIZE=20
DB_TIMEOUT_SECONDS=10

# Important: Generate a secure JWT secret for production!
# Use: openssl rand -base64 32